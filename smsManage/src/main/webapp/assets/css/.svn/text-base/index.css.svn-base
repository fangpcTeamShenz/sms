*{
    margin: 0;
    padding: 0;
}
ul,li{
    margin: 0;
    padding: 0;
}
li{
    list-style: none;
}
.layout{
    -webkit-user-select:none;
    -moz-user-select:none;
    -ms-user-select:none;
    user-select:none;

    background-color: #fff;

}

/*资费说明*/
.layout .header .expenses{
    width: 100%;
    padding-bottom: .5rem;
    display: block;
}
/*中心---------------------------------------*/
.layout .header .expenses .centent{
    position: relative;
    width: 100%;
    height: 450px;
    margin-top: 20px;
    /*margin-left: 3%;*/
    border: 1px solid #c6c6c6;
    padding-top: 2.2%;
    box-sizing: border-box;
}
.layout .header .expenses .centent ul{
    width: 100%;
    height: 100%;
}
.layout .header .expenses .centent ul li{
    width: 30%;
    padding: .2rem 0;
    border-radius: .1rem;
    text-align: center;
    border: 1px solid #c6c6c6;
    float: left;
    margin-left: 2.5%;
    box-sizing: border-box;
    margin-bottom: 15px;
    cursor:pointer;
    font-size:14px;
    text-overflow:ellipsis;
	white-space:pre;
	overflow:hidden;
}
.layout .header .expenses .centent ul li.select{
    background-color: rgb(242, 242, 242);
    color: #ff5722;
}
/*视图工具条*/
.layout .header .expenses .centent .viewTool{
    width: 30%;
    position: absolute;
    bottom: 10px;
    left: 2.4%;
}
.layout .header .expenses .centent .viewTool .txt{
    width: 100%;
    border: 1px solid #c6c6c6;
    padding: 2px;
    padding-left: 7px;
    padding-right: 7px;
    text-align: center;
    background-color: rgb(242, 242, 242);
    font-size: 12px;
}
.layout .header .expenses .centent .viewTool .txt span{
    margin-right: 5px;
    color: #426fee;
}

/*选择工具条*/
.layout .header .expenses .centent .selectTool{
    width: 65%;
    position: absolute;
    bottom: 10px;
    right: 2.4%;
}
.layout .header .expenses .centent .selectTool .next{
    float: right;
    border: 1px solid #c6c6c6;
    padding: 2px;
    padding-left: 7px;
    padding-right: 7px;
    margin-left: 5px;
    cursor:pointer;
    background-color: rgb(242, 242, 242);
    font-size: 12px;
    color: #000;
}
.layout .header .expenses .centent .selectTool .pre{
    float: right;
    border: 1px solid #c6c6c6;
    padding: 2px;
    padding-left: 7px;
    padding-right: 7px;
    margin-left: 5px;
    cursor:pointer;
    background-color: rgb(242, 242, 242);
    font-size: 12px;
    color: #000;
}

